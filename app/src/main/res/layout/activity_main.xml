<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="50sp"
        android:id="@+id/actMain_tvHello">

    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actMain_btnChangeText"
        android:text="Change Text">
    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:onClick="AddFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add fragment A"
            android:id="@+id/actMain_btnAddFragmentA"
            >

        </Button>

        <Button
            android:onClick="AddFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add fragment B"
            android:id="@+id/actMain_btnAddFragmentB">

        </Button>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/actMain_framFragmentA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>
    <FrameLayout
        android:id="@+id/actMain_framFragmentB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>


</LinearLayout>